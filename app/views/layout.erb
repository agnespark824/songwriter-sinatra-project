		<% if logged_in? %>
			<div class="topnav">
				<a href="/songs" style="float:left;">Home</a>
				<a href="/users/<%= session["user_id"] %>" style="float:left;">My Account</a>
				<a href="/songs/new" style="float:left;">+ New Song</a>
				<a href="/logout" style="float:right;">Log Out</a>
			</div>
		<% else %>
			<div class="topnav">
				<a href="/signup" style="float:right;">Register</a>
				<a href="/" style="float:right;">Log In</a>
			</div>
		<% end %>
	
	
	<div class="wrapper">

	<% flash.keys.each do |type| %>
		<div data-alert class="flash <%= type %> alert-box radius">
