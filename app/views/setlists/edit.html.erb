<form action="/setlists/<%= @setlist.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <label for="setlist_event"><h3>Event</h3></label>
    <textarea id="setlist_event" name="setlist[event]" rows="1" cols="100"><%= @setlist.event %></textarea>
    <br>

    <label for="setlist_description"><h3>Event Description</h3></label>
    <textarea id="setlist_description" name="setlist[description]" rows="5" cols="120"><%= @setlist.description %></textarea>
    <br>

    <label for="setlist_songs"><h3>Setlist</h3></label>
    <% @songs.each do |song| %>
        <input type="checkbox" name="setlist[song_ids][]" id="<%= song.id %>" value="<%= song.id %>" <%="checked" if @setlist.songs.include?(song) %>><%= song.title %></input>
        <br>
    <% end %>
    <br>
    <br>
    <br>

    <input type="submit" value="Update">
</form>
