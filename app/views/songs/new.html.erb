<form action="/songs" method="post">
    <label for="song_title"><h3>Title</h3></label>
    <textarea id="song_title" name="songs[title]" rows="1" cols="100"></textarea><br>

    <label for="song_themes"><h3>Theme(s)</h3></label>
    <textarea id="song_themes" name="songs[themes]" rows="5" cols="190"></textarea><br>

    <label for="song_notes"><h3>Notes</h3></label>
    <textarea id="song_notes" name="songs[notes]" rows="15" cols="190"></textarea><br>

    <label for="song_lyrics"><h3>Lyrics</h3></label>
    <textarea id="song_lyrics" name="songs[lyrics]" rows="50" cols="190"></textarea><br><br>  

    <button type="submit" class="song_save_button">Save</button>    
</form>
